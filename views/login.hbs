<h1 class="text-4xl text-center">Connexion</h1>

<div class="container mx-auto">
    <form action="/user/login" method="post">

        <p class="text-red-700 font-bold mx-auto my-4 text-center text-2xl">{{error}}</p>

        <div class="my-4 mx-auto flex flex-col">
            <label class="text-center text-xl">Email</label>
            <input type="text" name="email" class="border-2 border-grey-100 w-1/3 mx-auto h-9 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400">
            <p class="mt-2 text-red-700 font-bold mx-auto text-lg">{{validation_errors.email}}</p>
        </div>

        <div class="my-4 mx-auto flex flex-col">
            <label class="text-center text-xl">Mot de passe</label>
            <input type="password" name="password" class="border-2 border-grey-100 w-1/3 mx-auto h-9 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400">
            <p class="mt-2 text-red-700 font-bold mx-auto text-lg">{{validation_errors.password}}</p>
        </div>

        <div class="my-4 mx-auto flex flex-col w-1/4">
            <input type="submit" class="rounded-lg p-4 bg-green-200" value="Connexion">
        </div>
    </form>
</div>